<h1>{{user.username}}'s rak-room</h1>

{{#if user}}
<div class="idcon">
  {{renderId}}
</div>
<div>
  <div class="profileRak">
    {{#each collections}}
    <a href="/edit-rak/{{this._id}}">{{this.name}}</a>
    <p>{{description}}</p>
    <div class="rakMovies">
      {{#each _movie}}
      <p>{{this.title}}</p>
    </div>{{/each}}
    <form action='/profile/{{_id}}/delete' method="POST">
      <button id="editRak" type="submit">remove</button>
    </form>
    {{/each}}
  </div>
  <a href="/create-rak">
    <button id="newRak" type="submit">new rak</button>
  </a>
  </form>
</div>
{{/if}}